# Environment variables for development
# Copy this file to .env and update values as needed

# Django Settings (CRITICAL - CHANGE THESE FOR PRODUCTION)
SECRET_KEY=your-secret-key-here-change-in-production-very-important
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# AWS EC2 Production Settings (uncomment and configure for AWS deployment)
# DEBUG=False
# ALLOWED_HOSTS=your-ec2-public-ip,your-domain.com,localhost,127.0.0.1
# Example: ALLOWED_HOSTS=3.6.126.140,mydomain.com,localhost,127.0.0.1
# AWS_DEBUG_HOSTS=False (set to True to temporarily allow all hosts for testing)

# Database: Using SQLite (default - no additional config needed)
# SQLite database file will be created automatically as db.sqlite3
# For high-traffic production, consider PostgreSQL:
# DB_NAME=your_database_name
# DB_USER=your_database_user
# DB_PASSWORD=your_database_password
# DB_HOST=your_database_host
# DB_PORT=5432

# AWS S3 Settings (for static/media files in production)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your_s3_bucket_name
# AWS_S3_REGION_NAME=us-east-1

# Email Settings (for production)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_app_password
# DEFAULT_FROM_EMAIL=noreply@yourcompany.com

# Redis Cache (for production)
# REDIS_URL=redis://localhost:6379/1

# Company Information
COMPANY_NAME=Mithila Foods
